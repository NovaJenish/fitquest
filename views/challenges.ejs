<%- include('partials/header', { title: 'Challenges', bgImage: '/images/challenges.webp' }) %>
<section class="py-12">
  <h1 class="text-4xl font-bold mb-8 text-center bg-black bg-opacity-70">Challenges</h1>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-8 bg-black bg-opacity-70">
    <% challenges.forEach(challenge => { %>
      <div class="p-6 rounded-lg shadow-lg ">
        <h2 class="text-2xl font-semibold mb-2 text-gray-100"><%= challenge.name %></h2>
        <p class="mb-2 text-gray-200"><%= challenge.description %></p>
        <p class="text-sm text-gray-300 mb-4">Points: <%= challenge.points %></p>
        <% if (joined.includes(challenge.id)) { %>
          <button class="w-full bg-green-500 hover:bg-green-600 text-white py-2 rounded transition">Joined</button>
        <% } else { %>
          <form action="/challenges/join" method="POST">
            <input type="hidden" name="challengeId" value="<%= challenge.id %>">
            <button type="submit" class="w-full bg-blue-500 hover:bg-blue-600 text-white py-2 rounded transition">Join Challenge</button>
          </form>
        <% } %>
      </div>
    <% }); %>
  </div>
</section>
<%- include('partials/footer') %>
