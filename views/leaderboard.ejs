<%- include('partials/header', { title: 'Leaderboard', bgImage: '/images/leaderboard.webp' }) %>
<section class="py-12 bg-black bg-opacity-70">
  <h1 class="text-4xl font-bold mb-8 text-center">Leaderboard</h1>
  <div class="overflow-x-auto rounded-lg shadow-lg">
    <table class="min-w-full">
      <thead>
        <tr>
          <th class="px-4 py-2 border">Rank</th>
          <th class="px-4 py-2 border">Avatar</th>
          <th class="px-4 py-2 border">Name</th>
          <th class="px-4 py-2 border">Score</th>
        </tr>
      </thead>
      <tbody>
        <% leaderboard.forEach((entry, index) => { %>
        <tr class="<%= entry.username === user.username ? 'bg-blue-700' : '' %>">
          <td class="px-4 py-2 border text-center text-gray-100"><%= index + 1 %></td>
          <td class="px-4 py-2 border text-center">
            <img src="https://robohash.org/<%= encodeURIComponent(entry.username) %>" alt="Unique Avatar" class="w-10 h-10 rounded-full inline-block">
          </td>
          <td class="px-4 py-2 border text-center text-gray-100"><%= entry.username %></td>
          <td class="px-4 py-2 border text-center text-gray-100"><%= entry.points %></td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</section>
<%- include('partials/footer') %>
