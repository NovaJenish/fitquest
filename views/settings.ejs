<%- include('partials/header', { title: 'Settings', bgImage: '/images/settings.webp' }) %>
<section class="py-12 bg-black bg-opacity-70">
  <div class="max-w-3xl mx-auto  p-8 rounded-lg shadow-lg ">
    <h1 class="text-4xl font-bold mb-8 text-center">Settings</h1>
    <form action="/settings" method="POST">
      <!-- Change Password -->
      <div class="mb-6">
        <label for="password" class="block text-gray-200 mb-2">Change Password</label>
        <input 
          type="password" 
          name="password" 
          id="password" 
          placeholder="Enter new password" 
          class="w-full px-4 py-2 bg-gray-200 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500 text-black">
      </div>
      <!-- Notifications -->
      <div class="mb-6">
        <label for="notifications" class="block text-gray-200 mb-2">Notifications</label>
        <select 
          name="notifications" 
          id="notifications" 
          class="w-full px-4 py-2 bg-gray-200 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500 text-black">
          <option value="enabled" <%= user.notifications_enabled === 1 ? 'selected' : '' %>>Enabled</option>
          <option value="disabled" <%= user.notifications_enabled === 0 ? 'selected' : '' %>>Disabled</option>
        </select>
      </div>
      <!-- Daily Step Goal -->
      <div class="mb-6">
        <label for="dailyGoal" class="block text-gray-200 mb-2">Daily Step Goal</label>
        <input 
          type="number" 
          name="dailyGoal" 
          id="dailyGoal" 
          min="0" 
          step="1" 
          placeholder="e.g., 10000" 
          value="<%= typeof user.daily_goal !== 'undefined' ? user.daily_goal : '' %>" 
          class="w-full px-4 py-2 bg-gray-200 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500 text-black">
      </div>
      <!-- Submit Button -->
      <div class="text-center">
        <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded transition duration-200">
          Update Settings
        </button>
      </div>
    </form>
  </div>
</section>
<%- include('partials/footer') %>
