<%- include('partials/header', { title: 'Progress', bgImage: '/images/progress.webp' }) %>
<section class="py-12 bg-black bg-opacity-70">
  <h1 class="text-4xl font-bold mb-8 text-center">Your Progress</h1>
  <div class="p-6 rounded-lg shadow-lg mb-8 max-w-3xl mx-auto">
    <h2 class="text-2xl font-semibold mb-4 text-gray-100">Update Today's Progress</h2>
    <form action="/progress" method="POST">
      <div class="mb-4">
        <label class="block text-gray-200 mb-2" for="date">Date</label>
        <input type="date" name="date" id="date" class="w-full p-3 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500 text-black" required>
      </div>
      <div class="mb-4">
        <label class="block text-gray-200 mb-2" for="steps">Steps</label>
        <input type="number" name="steps" id="steps" class="w-full p-3 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500 text-black" required>
      </div>
      <div class="mb-4">
        <label class="block text-gray-200 mb-2" for="calories">Calories Burned</label>
        <input type="number" name="calories" id="calories" class="w-full p-3 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500 text-black" required>
      </div>
      <div class="mb-4">
        <label class="block text-gray-200 mb-2" for="distance">Distance (km)</label>
        <input type="number" step="0.1" name="distance" id="distance" class="w-full p-3 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500 text-black" required>
      </div>
      <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white p-3 rounded transition">Update Progress</button>
    </form>
  </div>
  <div class="p-6 rounded-lg shadow-lg max-w-3xl mx-auto">
    <h2 class="text-2xl font-semibold mb-4 text-gray-100">Past Progress Records</h2>
    <table class="min-w-full">
      <thead>
        <tr>
          <th class="px-4 py-2 border">Date</th>
          <th class="px-4 py-2 border">Steps</th>
          <th class="px-4 py-2 border">Calories</th>
          <th class="px-4 py-2 border">Distance</th>
        </tr>
      </thead>
      <tbody>
        <% progress.forEach(record => { %>
        <tr>
          <td class="px-4 py-2 border text-gray-200"><%= record.date %></td>
          <td class="px-4 py-2 border text-gray-200"><%= record.steps %></td>
          <td class="px-4 py-2 border text-gray-200"><%= record.calories %></td>
          <td class="px-4 py-2 border text-gray-200"><%= record.distance %></td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</section>
<%- include('partials/footer') %>
