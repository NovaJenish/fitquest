<%- include('partials/header', { title: 'Dashboard', bgImage: '/images/dashboard.webp' }) %>
<section class="py-12 text-white">
  <h1 class="bg-black bg-opacity-70 text-4xl font-bold mb-8 text-center">Welcome, <%= user.username %>!</h1>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
    <a href="/challenges" class="bg-white bg-opacity-90 p-6 rounded-lg shadow-lg hover:shadow-2xl transition">
      <h2 class="text-2xl font-semibold mb-2 text-gray-800">Challenges</h2>
      <p class="text-gray-700">Join fitness challenges to stay motivated.</p>
    </a>
    <a href="/progress" class="bg-white bg-opacity-90 p-6 rounded-lg shadow-lg hover:shadow-2xl transition">
      <h2 class="text-2xl font-semibold mb-2 text-gray-800">Progress</h2>
      <p class="text-gray-700">Track your fitness journey and metrics.</p>
    </a>
    <a href="/rewards" class="bg-white bg-opacity-90 p-6 rounded-lg shadow-lg hover:shadow-2xl transition">
      <h2 class="text-2xl font-semibold mb-2 text-gray-800">Rewards</h2>
      <p class="text-gray-700">View your earned rewards and badges.</p>
    </a>
    <a href="/leaderboard" class="bg-white bg-opacity-90 p-6 rounded-lg shadow-lg hover:shadow-2xl transition">
      <h2 class="text-2xl font-semibold mb-2 text-gray-800">Leaderboard</h2>
      <p class="text-gray-700">See how you rank among your peers.</p>
    </a>
  </div>
  <div class="mt-12 bg-blue-600 bg-opacity-90 p-8 rounded-lg shadow-lg text-center">
    <h2 class="text-3xl font-bold text-white">Daily Motivation</h2>
    <p class="mt-4 text-white text-xl">Keep pushing towards your goals and strive for excellence!</p>
  </div>
</section>
<%- include('partials/footer') %>
